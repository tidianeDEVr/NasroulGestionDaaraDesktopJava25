# Configuration Example
# Copy this file to config.properties and fill in your actual credentials

# ===== Database Configuration =====
# Database type: mysql or sqlite
db.type=mysql

# MySQL Configuration (used when db.type=mysql)
db.mysql.host=localhost
db.mysql.port=3306
db.mysql.database=association_manager
db.mysql.username=YOUR_DB_USERNAME
db.mysql.password=YOUR_DB_PASSWORD
db.mysql.useSSL=false
db.mysql.serverTimezone=UTC

# SQLite Configuration (used when db.type=sqlite)
db.sqlite.path=association.db

# ===== SMS Configuration =====
# SMS Account ID from lafricamobile.com
sms.account.id=YOUR_ACCOUNT_ID

# SMS Account Password
sms.password=YOUR_PASSWORD

# SMS Sender Name (max 11 characters)
sms.sender=YOUR_SENDER

# SMS API URLs (usually don't need to change these)
sms.api.url=https://lamsms.lafricamobile.com/api
sms.credits.url=https://lamsms.lafricamobile.com/credits
