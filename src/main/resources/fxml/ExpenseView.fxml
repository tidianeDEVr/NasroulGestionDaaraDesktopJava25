<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.nasroul.controller.ExpenseController"
      spacing="16" style="-fx-padding: 24;">

    <HBox alignment="CENTER_LEFT" spacing="16">
        <Label text="Gestion des dépenses" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Import Excel" onAction="#handleImportExcel" styleClass="secondary-button"/>
        <Button text="Export Template" onAction="#handleExportTemplate" styleClass="secondary-button"/>
        <Button text="Nouvelle dépense" onAction="#handleAdd" styleClass="primary-button"/>
    </HBox>

    <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
            <TableColumn fx:id="colAmount" text="Montant" prefWidth="120"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
            <TableColumn fx:id="colCategory" text="Catégorie" prefWidth="120"/>
            <TableColumn fx:id="colEntityType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colEntityName" text="Entité" prefWidth="150"/>
            <TableColumn fx:id="colMember" text="Membre" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Label fx:id="totalLabel" text="Total: 0 CFA" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Modifier" onAction="#handleEdit" styleClass="secondary-button"/>
        <Button text="Supprimer" onAction="#handleDelete" styleClass="danger-button"/>
        <Button text="Actualiser" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>

</VBox>
