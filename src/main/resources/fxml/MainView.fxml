<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nasroul.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="16">
            <ImageView fitHeight="40" preserveRatio="true">
                <image>
                    <Image url="@/images/logo.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="dateLabel" styleClass="date-label"/>
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar" spacing="4" prefWidth="200">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <Label text="NAVIGATION" style="-fx-font-size: 11px; -fx-text-fill: #57606a; -fx-padding: 8 12 4 12; -fx-font-weight: 600;"/>

            <Button fx:id="btnDashboard" text="Tableau de bord" onAction="#showDashboard"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnContributions" text="Cotisations" onAction="#showContributions"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnExpenses" text="Dépenses" onAction="#showExpenses"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnMembers" text="Membres" onAction="#showMembers"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnGroups" text="Groupes" onAction="#showGroups"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnEvents" text="Événements" onAction="#showEvents"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Button fx:id="btnProjects" text="Projets" onAction="#showProjects"
                    styleClass="menu-button" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Label text="SYSTÈME" style="-fx-font-size: 11px; -fx-text-fill: #57606a; -fx-padding: 8 12 4 12; -fx-font-weight: 600;"/>

            <HBox alignment="CENTER_LEFT" spacing="8" maxWidth="Infinity">
                <Button fx:id="btnSync" text="Synchroniser" onAction="#handleSync"
                        styleClass="menu-button-sync" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <ProgressIndicator fx:id="syncProgressIndicator" prefWidth="20" prefHeight="20"
                                 visible="false" managed="false"/>
            </HBox>

            <Button text="Quitter" onAction="#handleExit"
                    styleClass="menu-button-exit" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane"/>
    </center>

    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT" spacing="16">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #57606a; -fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="syncStatusLabel" text="Dernier sync: Jamais" style="-fx-text-fill: #666; -fx-font-size: 12px; -fx-padding: 0 8;"/>
            <Label text="Djeureudjeuf Borom Touba" style="-fx-text-fill: #000000; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
