<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.nasroul.controller.EventDialogController"
      spacing="16" prefWidth="500" style="-fx-padding: 24;">

    <Label text="Informations de l'événement" styleClass="dialog-title"/>

    <GridPane hgap="12" vgap="12">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Nom*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1" prefRowCount="3"/>

        <Label text="Date de début*" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dpStartDate" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>

        <Label text="Date de fin" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dpEndDate" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity"/>

        <Label text="Lieu" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtLocation" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Organisateur" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <ComboBox fx:id="cbOrganizer" GridPane.columnIndex="1" GridPane.rowIndex="5" maxWidth="Infinity"/>

        <Label text="Budget de cotisation cible (CFA)" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="txtContributionTarget" GridPane.columnIndex="1" GridPane.rowIndex="6"
                   promptText="0.00"/>

        <Label text="Statut" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <ComboBox fx:id="cbStatus" GridPane.columnIndex="1" GridPane.rowIndex="7" maxWidth="Infinity"/>

        <Label text="Actif" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <CheckBox fx:id="cbActive" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Enregistrer" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>

</VBox>
